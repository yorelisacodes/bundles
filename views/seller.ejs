<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BundleBazaar</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
    crossorigin="anonymous" />
  <link rel="stylesheet" href="./css/fontawesome.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="./css/profile.css" />
  <script src="https://kit.fontawesome.com/83e7c78dd8.js" crossorigin="anonymous"></script>

</head>

<body>
  <header>
    <nav class="navbar">
      <ul>
        <li><a href="#">Home</a></li>
      </ul>
      <div class="page-header text-center">
        <h1>
          <span>BundleBazaar</span>
        </h1>
      </div>

      <div class="list-unstyled">
        <a href="/getChat/:<%= user.userName%>">Chat</a>
        <a href="/logout ">Logout</a>
        <a href="">
          <%= user.userType %>
        </a>

      </div>
    </nav>

  </header>

  <div class="container">
    <form action="/post/createBundle" enctype="multipart/form-data" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Title">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Description">
      </div>
      <div class="mb-3">
        <label for="imageUpload" class="form-label">Image</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="Location">
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="Price">
      </div>
      <button id="formbtn" type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div class="container sidebar">
    <div class="sidebar-inner">
      <% for(var i=0; i<bundles.length; i++) { %>
        <div class="card">
          <img class="card-img-top" src="<%= bundles[i].image %>" alt="Bundle Image" >
          <div class="card-body">
            <h5 class="card-title"><%= bundles[i].title %></h5>
            <p class="card-text"><%= bundles[i].description %></p>
            <p class="card-text">Location: <%= bundles[i].location %></p>
            <p class="card-text">Price: <%= bundles[i].price %></p>
            <form action="/post/deletePost/<%=bundles._id %>?_method=DELETE" >
              <span class="delete-icon"><i id="trash" class="fa fa-trash" aria-hidden="true"></i></span>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>

</body>
<script src="/main.js"></script>
</html>
